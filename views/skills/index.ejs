<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/style.css'>
    <title>Express Skills</title>
</head>
<body>
    <body>
        <h1>Skill List</h1>
        <h1>Skills as of <%= time %></h1>

        <ul>
          <% skills.forEach(function(t) { %>
            <li>

            <a href="/skills/<%= t.id %>"><%= t.skill %></a>
            -
            <%= t.experience %> 

            <form action="/skills/<%= t.id %>?_method=DELETE"
              class="delete-form" method="POST">
              <button type="submit">X</button>
            </form>

            <!-- <form action="/skills/<%= t.id %>/edit" method="GET">
              <button type="submit">Edit</button>
              </form> -->
            
            </li>

          <% }); %>

        </ul>
        <a href="/skills/new">Add New Skill</a>
      </body>
    
</body>
</html>